{
  "name": "lanyon",
  "version": "0.0.1",
  "description": "dr. Jekyll has turned into mr. Hyde. Lanyon to the rescue!",
  "main": "index.js",
  "scripts": {
    "build:assets": "webpack",
    "build:content:incremental": "env ARGS=--incremental npm run build:content",
    "build:content": "./vendor/bin/jekyll build ${ARGS} --source ${LANYON_PROJECT:-../..} --destination ${LANYON_PROJECT:-../..}/_site --config ${LANYON_PROJECT:-../..}/_config.yml,_config.dev.yml",
    "build": "npm-run-all build:content build:assets",
    "console": "docker run -i -t kevinvz/lanyon sh",
    "help": "./vendor/bin/jekyll build --help",
    "ownfix": "eslint . --fix",
    "ownlint": "eslint .",
    "postinstall": "node ./postinstall.js",
    "serve:content": "browser-sync start --config browsersync.config.js",
    "start": "npm-run-all build:content:incremental --parallel watch:content serve:content watch:assets",
    "test": "./test.sh",
    "watch:assets": "webpack-dev-server --inline --hot --progress --colors --debug --devtool sourcemap --output-pathinfo",
    "watch:content": "nodemon --on-change-only --verbose --watch ${LANYON_PROJECT:-../..} --ignore assets --ignore vendor --ignore node_modules --ignore _site --ext md,html,yml,json,sh --exec 'npm run build:content:incremental'"
  },
  "lanyon": {
    "entries": [
      "app"
    ],
    "prerequisites": {
      "bundler": {
        "preferred": "1.13.0",
        "range": ">=1"
      },
      "ruby": {
        "preferred": "2.1.10",
        "range": ">=2"
      },
      "node": {
        "preferred": "4.6.1",
        "range": ">=0.10"
      },
      "rbenv": {
        "preferred": "1.0.0",
        "range": ">=1"
      },
      "rvm": {
        "preferred": "1.27.0",
        "range": ">=1"
      },
      "docker": {
        "preferred": "1.12.3",
        "range": ">=1.12"
      }
    },
    "ports": {
      "assets": 3000,
      "content": 4000
    },
    "gems": {
      "github-pages": "104",
      "jekyll-crosspost-to-medium": "0.1.14",
      "stringex": "2.6.0"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kvz/lanyon.git"
  },
  "keywords": [
    "jekyll",
    "static",
    "site",
    "generator"
  ],
  "author": "Kevin van Zonneveld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kvz/lanyon/issues"
  },
  "homepage": "https://github.com/kvz/lanyon#readme",
  "babel": {
    "presets": [
      "es2015-loose"
    ],
    "plugins": [
      "react-hot-loader/webpack"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true
    }
  },
  "devDependencies": {
    "eslint": "3.10.2",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.4.0",
    "eslint-plugin-standard": "2.0.1"
  },
  "dependencies": {
    "autoprefixer": "6.5.3",
    "babel-core": "6.18.2",
    "babel-loader": "6.2.8",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "browser-sync": "2.18.2",
    "chalk": "1.1.3",
    "coffee-loader": "0.7.2",
    "coffee-script": "^1.11.1",
    "css-loader": "0.26.0",
    "depurar": "0.3.0",
    "extract-text-webpack-plugin": "1.0.1",
    "fakefile": "0.0.8",
    "file-loader": "^0.9.0",
    "font-awesome": "^4.7.0",
    "font-awesome-loader": "1.0.1",
    "http-server": "0.9.0",
    "jsx-loader": "0.13.2",
    "lodash": "4.17.2",
    "node-libs-browser": "2.0.0",
    "node-sass": "3.13.0",
    "nodemon": "1.11.0",
    "npm-run-all": "3.1.1",
    "postcss-loader": "1.1.1",
    "react": "15.4.1",
    "react-dom": "15.4.1",
    "react-hot-loader": "3.0.0-beta.6",
    "resolve-url-loader": "1.6.0",
    "rimraf": "^2.5.4",
    "sass-loader": "4.0.2",
    "semver": "5.3.0",
    "shelljs": "0.7.5",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack": "1.13.3",
    "webpack-dev-server": "1.16.2",
    "webpack-visualizer-plugin": "0.1.5"
  }
}
