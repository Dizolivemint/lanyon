{
  "name": "lanyon",
  "version": "0.0.53",
  "description": "dr. Jekyll has turned into mr. Hyde. Lanyon to the rescue!",
  "main": "lib/config.js",
  "engines": {
    "node": ">=0.12.18"
  },
  "jest": {
    "verbose": true,
    "testPathDirs": [
      "lib/"
    ]
  },
  "bin": {
    "lanyon": "lib/cli.js"
  },
  "scripts": {
    "build": "babel src --source-maps --out-dir lib",
    "build:watch": "babel src --watch --source-maps --out-dir lib",
    "commit:gemlockfile": "git commit Gemfile.lock -m 'Save updated Gemfile.lock' || true",
    "push": "git push && git push --tags",
    "container:rebuild": "env LANYON_UPDATE_GEM_LOCKFILE=1 DOCKER_RESET=1 DOCKER_BUILD=1 DEBUG=*:* LANYON_ONLY=docker LANYON_PROJECT=$(pwd)/example node lib/cli.js install",
    "container:build": "env LANYON_UPDATE_GEM_LOCKFILE=1 DOCKER_BUILD=1 DEBUG=*:* LANYON_ONLY=docker LANYON_PROJECT=$(pwd)/example node lib/cli.js install",
    "container:connect": "node lib/cli.js container:connect",
    "fix": "eslint . --fix",
    "lint": "eslint .",
    "release:major": "env SEMANTIC=major npm run release",
    "release:minor": "env SEMANTIC=minor npm run release",
    "release:patch": "env SEMANTIC=patch npm run release",
    "release": "npm version ${SEMANTIC:-patch} -m \"Release %s\" && npm-run-all build container:build commit:gemlockfile push npublish",
    "npublish": "npm publish",
    "jest:update": "env DEBUG=scrolex:* NODE_ENV=test jest --updateSnapshot",
    "jest": "env DEBUG=scrolex:* NODE_ENV=test jest",
    "test:update": "npm-run-all build jest:update",
    "test:acceptance": "./scripts/test-acceptance.sh",
    "test:watcher": "npm test -- --watch",
    "test": "npm-run-all build jest",
    "upgrade:modules": "next-update --keep true --tldr",
    "web:install": "cd website && npm run install",
    "web:start": "cd website && npm run start"
  },
  "lanyon": {
    "statistics": "stats.html",
    "entries": [
      "app"
    ],
    "prerequisites": {
      "sh": {
        "preferred": "0.5.7",
        "range": ">=0.0.1",
        "writeShim": true
      },
      "node": {
        "preferred": "4.6.1",
        "range": ">=0.10"
      },
      "docker": {
        "preferred": "1.12.3",
        "range": ">=1.12"
      },
      "rbenv": {
        "preferred": "1.0.0",
        "range": ">=1"
      },
      "rvm": {
        "preferred": "1.27.0",
        "range": ">=1"
      },
      "ruby": {
        "preferred": "2.3.3",
        "range": ">=2",
        "writeShim": true
      },
      "gem": {
        "preferred": "2.0.14.1",
        "range": ">=2",
        "writeShim": true
      },
      "bundler": {
        "preferred": "1.13.0",
        "range": ">=1",
        "writeShim": true
      },
      "jekyll": {
        "preferred": "3.3.0",
        "range": ">=3",
        "writeShim": true
      }
    },
    "ports": {
      "assets": 3000,
      "content": 4000
    },
    "gems": {
      "github-pages": "112",
      "jekyll-crosspost-to-medium": "0.1.14",
      "nokogiri": "1.6.8.1",
      "pkg-config": "1.1.7",
      "stringex": "2.6.0"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kvz/lanyon.git"
  },
  "keywords": [
    "jekyll",
    "static",
    "site",
    "generator"
  ],
  "author": "Kevin van Zonneveld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kvz/lanyon/issues"
  },
  "homepage": "https://github.com/kvz/lanyon#readme",
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true
    }
  },
  "devDependencies": {
    "eslint": "3.12.2",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.4.0",
    "eslint-plugin-standard": "2.0.1",
    "jest": "18.1.0",
    "next-update": "1.5.1"
  },
  "dependencies": {
    "assets-webpack-plugin": "3.5.0",
    "autoprefixer": "6.6.1",
    "babel-cli": "6.11.4",
    "babel-core": "6.21.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.2.10",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-es6-promise": "1.0.0",
    "babel-plugin-transform-async-to-generator": "6.16.0",
    "babel-plugin-transform-object-assign": "6.8.0",
    "babel-plugin-transform-proto-to-assign": "6.9.0",
    "babel-polyfill": "6.9.1",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-es2015-loose": "8.0.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "babel-register": "6.9.0",
    "babel-runtime": "6.22.0",
    "bower-webpack-plugin": "0.1.9",
    "browser-sync": "2.18.5",
    "chalk": "1.1.3",
    "coffee-loader": "0.7.2",
    "coffee-script": "1.12.2",
    "common-tags": "1.4.0",
    "css-loader": "0.26.1",
    "depurar": "0.3.0",
    "exports-loader": "0.6.3",
    "extract-text-webpack-plugin": "1.0.1",
    "fakefile": "0.0.8",
    "file-loader": "0.9.0",
    "font-awesome": "4.7.0",
    "font-awesome-loader": "1.0.1",
    "globby": "6.1.0",
    "http-server": "0.9.0",
    "imports-loader": "0.7.0",
    "js-yaml": "3.7.0",
    "less": "2.7.2",
    "less-loader": "2.2.3",
    "lodash": "4.17.4",
    "log-symbols": "1.0.2",
    "log-update": "1.0.2",
    "node-libs-browser": "2.0.0",
    "node-sass": "3.13.0",
    "nodemon": "1.11.0",
    "npm-run-all": "4.0.0",
    "optimize-css-assets-webpack-plugin": "1.3.0",
    "os-tmpdir": "1.0.2",
    "parallelshell": "2.0.0",
    "postcss-loader": "1.2.1",
    "react": "15.4.1",
    "react-dom": "15.4.1",
    "react-hot-loader": "3.0.0-beta.6",
    "resolve-url-loader": "1.6.1",
    "rimraf": "2.5.4",
    "sass-loader": "4.1.1",
    "scrolex": "0.0.20",
    "semver": "5.3.0",
    "shelljs": "0.7.5",
    "spawn-sync": "1.0.15",
    "style-loader": "0.13.1",
    "uglify": "0.1.5",
    "uglify-loader": "1.4.0",
    "url-loader": "0.5.7",
    "webpack": "1.13.3",
    "webpack-dev-middleware": "1.8.4",
    "webpack-dev-server": "1.16.2",
    "webpack-hot-middleware": "2.13.2",
    "webpack-manifest-plugin": "1.1.0",
    "webpack-md5-hash": "0.0.5",
    "webpack-svgstore-plugin": "3.0.6",
    "webpack-visualizer-plugin": "0.1.5"
  }
}
