{
  "name": "lanyon",
  "version": "0.0.1",
  "description": "dr. Jekyll has turned into mr. Hyde. Lanyon to the rescue!",
  "main": "index.js",
  "scripts": {
    "postinstall": "node ./postinstall.js",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "x": "cd .. && echo $(pwd)",
    "build": "node ./build.js",
    "start": "deps/bin/bundle exec jekyll serve",
    "help": "deps/bin/bundle exec jekyll build --help",
    "test": "./test.sh"
  },
  "lanyon": {
    "bundlerDesired": "1.13.0",
    "bundlerSatisfactory": ">=1",
    "rubyDesired": "2.1.1",
    "rubySatisfactory": ">=2",
    "nodeDesired": "4.6.1",
    "nodeSatisfactory": ">=0.10",
    "rvmDesired": "1.27.0",
    "rvmSatisfactory": ">=1",
    "rvmCmd": "export PATH=\"$PATH:$HOME/.rvm/bin\" && . $HOME/.rvm/scripts/rvm && rvm",
    "gems": {
      "github-pages": "104",
      "jekyll-crosspost-to-medium": "0.1.14",
      "stringex": "2.6.0"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kvz/lanyon.git"
  },
  "keywords": [
    "jekyll",
    "static",
    "site",
    "generator"
  ],
  "author": "Kevin van Zonneveld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kvz/lanyon/issues"
  },
  "homepage": "https://github.com/kvz/lanyon#readme",
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true
    }
  },
  "devDependencies": {
    "eslint": "3.9.1",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.3.1",
    "eslint-plugin-standard": "2.0.1"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "fakefile": "0.0.8",
    "semver": "^5.3.0",
    "shelljs": "0.7.5"
  }
}
