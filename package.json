{
  "name": "lanyon",
  "version": "0.0.1",
  "description": "dr. Jekyll has turned into mr. Hyde. Lanyon to the rescue!",
  "main": "index.js",
  "scripts": {
    "build:assets": "webpack",
    "build:content:incremental": "env ARGS=--incremental npm run build:content",
    "build:content": "deps/bin/ruby deps/bin/bundler exec jekyll build ${ARGS} --source ${PROJECT_DIR:-../..} --destination ${PROJECT_DIR:-../..}/_site --config ${PROJECT_DIR:-../..}/_config.yml,_config.dev.yml",
    "build": "npm-run-all build:content build:assets",
    "help": "deps/bin/bundle exec jekyll build --help",
    "hjsbuild": "webpack",
    "hjsdeploy": "npm run build && surge -p public -d somedomain.com",
    "ownfix": "eslint . --fix",
    "ownlint": "eslint .",
    "postinstall": "node ./postinstall.js",
    "serve:content": "cd ${PROJECT_DIR:-../..}/_site && browser-sync start --server --files --reload-delay 200 --reload-debounce 200 --port 3001 .",
    "start": "npm-run-all build:content:incremental --parallel watch:content serve:content watch:assets",
    "test": "./test.sh",
    "watch:assets": "hjs-dev-server",
    "watch:content": "nodemon --on-change-only --verbose --watch ${PROJECT_DIR:-../..} --ignore assets --ignore node_modules --ignore _site --ext md,html,yml,json,sh --exec 'npm run build:content:incremental'"
  },
  "lanyon": {
    "bundlerDesired": "1.13.0",
    "bundlerSatisfactory": ">=1",
    "rubyDesired": "2.1.1",
    "rubySatisfactory": ">=5",
    "nodeDesired": "4.6.1",
    "nodeSatisfactory": ">=0.10",
    "rbenvDesired": "1.0.0",
    "rbenvSatisfactory": ">=1",
    "rvmDesired": "1.27.0",
    "rvmSatisfactory": ">=1",
    "gems": {
      "github-pages": "104",
      "jekyll-crosspost-to-medium": "0.1.14",
      "stringex": "2.6.0"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kvz/lanyon.git"
  },
  "keywords": [
    "jekyll",
    "static",
    "site",
    "generator"
  ],
  "author": "Kevin van Zonneveld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kvz/lanyon/issues"
  },
  "homepage": "https://github.com/kvz/lanyon#readme",
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true
    }
  },
  "devDependencies": {
    "eslint": "3.9.1",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.3.1",
    "eslint-plugin-standard": "2.0.1"
  },
  "dependencies": {
    "autoprefixer": "6.5.2",
    "babel-core": "6.18.2",
    "babel-loader": "6.2.7",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "browser-sync": "^2.17.5",
    "chalk": "1.1.3",
    "coffee-loader": "0.7.2",
    "css-loader": "0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fakefile": "0.0.8",
    "font-awesome-webpack": "^0.0.4",
    "hjs-webpack": "8.4.2",
    "jsx-loader": "0.13.2",
    "merge-descriptors": "1.0.1",
    "node-sass": "3.11.2",
    "nodemon": "1.11.0",
    "npm-run-all": "3.1.1",
    "postcss-loader": "1.1.0",
    "resolve-url-loader": "1.6.0",
    "sass-loader": "4.0.2",
    "semver": "5.3.0",
    "shelljs": "0.7.5",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack-visualizer-plugin": "0.1.5"
  }
}
